<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>Car Listing</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
  </head>
  <body>
    <div class="container">
      @using CarDealership.Models;
      <h1>Available Cars:</h1>
      @if (Model.Count == 0)
      {
        <p>There are no items in the list</p>
      }
      <ol>
        @foreach (Car car in Model)
        {
          <li>
            Model: @car.MakeModel<br>
            Miles: @car.Miles<br>
            Price: @car.Price
          </li>
        }
      </ol>
      <a href="/cars">See available cars</a>
      <a href="/cars/new">Create new listing</a>  
    </div>
  </body>  
</html>    